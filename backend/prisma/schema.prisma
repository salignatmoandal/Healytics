// apps/backend/prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // ou sqlite, mysql selon votre préférence
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
  reports   Report[]
}

model Symptom {
  id          String   @id @default(uuid())
  name        String
  description String?
  createdAt   DateTime @default(now())
  reports     Report[]
}

model Report {
  id        String    @id @default(uuid())
  userId    String
  user      User      @relation(fields: [userId], references: [id])
  symptoms  Symptom[]
  createdAt DateTime  @default(now())
}